{% extends 'base.html.twig' %}

{% block title %}Editar Oficina{% endblock %}

{% block body %}
    <h1>Edici√≥n de Oficina</h1>

    {{ form_start(form) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>

    <div class="row">
        <div class="col-7">
            {{ form_row(form.oficina) }}
        </div>
        <div class="col-3">
            {{ form_row(form.localidad) }}
        </div>
        <div class="col-2">
            {{ form_row(form.telefono) }}
        </div>
    </div>
    <div class="row">
        <div class="col-3">
            {{ form_row(form.horaInicioAtencion) }}
        </div>
        <div class="col-4">
            {{ form_row(form.horaFinAtencion) }}
        </div>
        <div class="col-3">
            {{ form_row(form.frecuenciaAtencion) }}
        </div>
        <div class="col-2">
            {{ form_row(form.cantidadTurnosxturno) }}
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            {{ form_row(form.observaciones) }}
        </div>
    </div>
    <div class="row">
        <div class="col-3">
            {{ form_row(form.autoExtend) }}
        </div>
        <div class="col-2">
            {{ form_row(form.habilitada) }}
        </div>
        <div class="col-7 text-right">
            {{ form_row(form.autoGestion) }}
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-12 float-left">
            <!-- Se agregan estilos a los botones para que queden alineados -->
            {{ include('oficina/_form.html.twig', {'button_label': 'Grabar Cambios'}) }}
            <a  class="btn btn-secondary float-left shadow volver" href="#" onclick="history.back(); return false;">Volver a la  lista</a>
            {{ include('oficina/_delete_form.html.twig') }}
        </div>
    </div>    
    {{ form_end(form) }}
{% endblock %}
