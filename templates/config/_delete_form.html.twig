<form method="post" action="{{ path('config_delete', {'id': config.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ config.id) }}">
    <button class="btn btn-outline-secondary float-left shadow">Borrar</button>
</form>
