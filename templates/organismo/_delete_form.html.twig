<form method="post" action="{{ path('organismo_delete', {'id': organismo.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ organismo.id) }}">
    <!-- Se agregan estilos a los botones para que queden alineados -->
    <button class="btn btn-outline-secondary float-left shadow">Borrar</button>
</form>
